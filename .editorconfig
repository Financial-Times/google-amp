# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*.{js,css,vcl}]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{package, bower}.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
